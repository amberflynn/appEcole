
<p>
  <h2>
  <%= link_to post.title, post %>
  </h2>
</p>

<p>
  <%= simple_format post.content %>
</p>
<% if post.pictures.present? %>
  <% post.pictures.each do |picture| %>
   <%= image_tag(picture.image, width: 500) %>
  <% end %>
<% end %>

<p class="text-muted">
	<small>
 	Post√© le <%= post.created_at.to_formatted_s(:long) %>
 	</small>
</p>